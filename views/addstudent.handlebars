<section id="add" class="container">
    <div class="form-wrap">
      <h1></h1>
      <p></p>
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/students/addstudent" method="POST">
        <div class="input-group">
          <label for="lastName">Last Name</label>
          <input type="text" name="lastName" id="lastName" class="input-box" placeholder="Last Name"
            maxlength="100" value={{lastName}}>
        </div>
        <div class="input-group">
          <label for="firstName">First Name</label>
          <input type="text" name="firstName" id="firstName" class="input-box" placeholder="First Name"
          maxlength="100" value={{firstName}}>
        </div>
        <div class="input-group">
          <label for="email">Email(.com only)</label>
          <input type="text" name="email" id="email" class="input-box" placeholder="Email(.com only)" value={{email}}>
        </div>
        <div class="input-group">
          <label for="imageUrl">imageUrl</label>
          <input type="text" name="imageUrl" id="imageUrl" class="input-box" placeholder="imageUrl"maxlength="100" value={{imageUrl}}>
        </div>
        <div class="input-group">
          <label for="gpa">gpa</label>
          <input type="number" name="gpa" id="gpa" class="input-box" placeholder="gpa" value={{gpa}}>
        </div>
        <input type="submit" value="Add Student">
      </form>
    </div>
  </section>