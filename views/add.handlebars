<section id="add" class="container">
    <div class="form-wrap">
      <h1></h1>
      <p></p>
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/campuses/add" method="POST">
        <div class="input-group">
          <label for="title">Name</label>
          <input type="text" name="name" id="name" class="input-box" placeholder="Name"
            maxlength="100" value={{name}}>
        </div>
        <div class="input-group">
          <label for="technologies">imageUrl</label>
          <input type="text" name="imageUrl" id="imageUrl" class="input-box" placeholder="imageUrl"
          maxlength="100" value={{imageUrl}}>
        </div>
        <div class="input-group">
          <label for="budget">Address</label>
          <input type="text" name="address" id="address" class="input-box" placeholder="address">
        </div>
        <div class="input-group">
          <label for="description">Description</label>
          <textarea name="description" id="description" class="input-box" placeholder="Description"
            rows="10">{{description}}</textarea>
        </div>
        <input type="submit" value="Add Campus">
      </form>
    </div>
  </section>