<section id="add" class="container">
    <div class="form-wrap">
      <h1></h1>
      <p></p>
      {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}

      {{#each students}}
      <form action="/students/view/{{id}}/editstudent" method="POST">
      <p>If there are errors with input, you will be redirected to this page and changes will not occur.</p>
        <div class="input-group">
          <label for="lastName">Last Name</label>
          <input type="text" name="lastName" id="lastName" class="input-box" placeholder="Last Name"
            maxlength="100" value={{lastName}}>
        </div>
        <div class="input-group">
          <label for="firstName">First Name</label>
          <input type="text" name="firstName" id="firstName" class="input-box" placeholder="First Name"
          maxlength="100" value={{firstName}}>
        </div>
        <div class="input-group">
          <label for="email">Email</label>
          <input type="text" name="email" id="email" class="input-box" placeholder="address" value={{email}}>
        </div>
        <div class="input-group">
          <label for="imageUrl">imageUrl</label>
          <input type="text" name="imageUrl" id="imageUrl" class="input-box" placeholder="imageUrl"
          maxlength="100">
        </div>
        <div class="input-group">
          <label for="gpa">gpa</label>
          <input type="number" name="gpa" id="gpa" class="input-box" placeholder="gpa" value={{gpa}}>
        </div>
        <input type="submit" value="Edit Student">
      </form>
      {{else}}
      <button onclick ="window.history.back()">You entered info incorrectly, click here to go back</button>
      {{/each}}
    </div>
  </section>